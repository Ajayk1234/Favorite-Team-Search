<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/home_destination">

    <fragment
        android:id="@+id/home_destination"
        android:name="com.example.itemsearch.ui.ItemSearchHomeScreenFragment"
        android:label="@string/app_name"
        tools:layout="@layout/main_search_fragment">
    </fragment>

    <fragment
        android:id="@+id/search_result"
        android:name="com.example.itemsearch.ui.ItemDetailsFragment"
        android:label="@string/item_details"
        tools:layout="@layout/search_item_details">
        <action
            android:id="@+id/confirmationAction"
            app:popEnterAnim="@anim/slide_in_right"
            />
    </fragment>


</navigation>